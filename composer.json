{
  "description": "BDD assertion library based on PHPUnit.",
  "homepage": "https://github.com/cedx/phpunit-expect",
  "license": "Apache-2.0",
  "name": "cedx/phpunit-expect",
  "type": "library",
  "authors": [{
    "email": "cedric@belin.io",
    "name": "CÃ©dric Belin"
  }],
  "autoload": {
    "files": ["lib/functions.php"],
    "psr-4": {"PHPUnit\\Expect\\": "lib/"}
  },
  "config": {
    "optimize-autoloader": true
  },
  "keywords": [
    "assert",
    "bdd",
    "expect",
    "phpunit",
    "test",
    "unit"
  ],
  "require": {
    "php": ">=7.0.0",
    "ext-mbstring": "*",
    "ext-reflection": "*",
    "ext-spl": "*",
    "phpunit/phpunit": "^6.3.0",
    "voryx/event-loop": "^2.0.2"
  },
  "require-dev": {
    "apigen/apigen": "^5.0.0-RC5",
    "cedx/coveralls": "^4.0.0",
    "phing/phing": "^2.16.0",
    "roave/better-reflection": "dev-master#a402048"
  },
  "scripts": {
    "coverage": "coveralls var/coverage.xml",
    "test": "phpunit --colors=auto --verbose"
  },
  "support": {
    "issues": "https://github.com/cedx/phpunit-expect/issues"
  }
}
