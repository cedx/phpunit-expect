{
  "description": "BDD assertion library based on PHPUnit, inspired by Chai.",
  "homepage": "https://dev.belin.io/phpunit-expect",
  "license": "MIT",
  "name": "cedx/phpunit-expect",
  "type": "library",
  "authors": [
    {"email": "cedric@belin.io", "homepage": "https://belin.io", "name": "CÃ©dric Belin"}
  ],
  "autoload": {
    "files": ["lib/functions.php"],
    "psr-4": {"PHPUnit\\Expect\\": "lib/"}
  },
  "autoload-dev": {
    "files": ["vendor/phpunit/phpunit/src/Framework/Assert/Functions.php"],
    "psr-4": {"PHPUnit\\Expect\\": "test/"}
  },
  "config": {
    "optimize-autoloader": true
  },
  "keywords": [
    "assert",
    "bdd",
    "expect",
    "phpunit",
    "test",
    "unit"
  ],
  "require": {
    "php": ">=7.4.0",
    "ext-mbstring": "*",
    "ext-reflection": "*",
    "ext-spl": "*",
    "phpunit/phpunit": "^8.5.0"
  },
  "require-dev": {
    "consolidation/robo": "^2.0.0",
    "phpstan/phpstan": "^0.12.3"
  },
  "scripts": {
    "coverage": "robo coverage",
    "test": "robo test"
  },
  "support": {
    "docs": "https://dev.belin.io/phpunit-expect/api",
    "issues": "https://github.com/cedx/phpunit-expect/issues"
  }
}
